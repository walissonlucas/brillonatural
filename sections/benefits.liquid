{% assign icons = "sparkles,leaf,truck,credit-card" | split: "," %}

<section class="py-16 bg-primary/30">
  <div class="container-custom">
    <h2 class="section-title">{{ section.settings.title }}</h2>
    <p class="section-subtitle">{{ section.settings.subtitle }}</p>
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 mt-12">
      {% for block in section.blocks %}
        {% assign icon = icons[forloop.index0] %}
        <div class="benefit-card" {{ block.shopify_attributes }}>
          {% render 'icon-' | append: icon, class: "text-accent-dark h-12 w-12 mb-4" %}
          <h3 class="font-poppins font-semibold text-lg mb-2">{{ block.settings.title }}</h3>
          <p class="text-dark-light">{{ block.settings.description }}</p>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Benefits",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "¿Por qué elegirnos?"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "Descubre los beneficios que han conquistado a miles de mujeres"
    }
  ],
  "blocks": [
    {
      "type": "benefit",
      "name": "Benefit",
      "limit": 4,
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Resultados reales"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description",
          "default": "Productos clínicamente probados para resultados visibles en tu piel"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Benefits",
      "blocks": [
        {
          "type": "benefit"
        },
        {
          "type": "benefit"
        },
        {
          "type": "benefit"
        },
        {
          "type": "benefit"
        }
      ]
    }
  ]
}
{% endschema %}