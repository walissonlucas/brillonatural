{% if section.blocks.size > 0 %}
  <div class="announcement-bar" data-autoplay="{{ section.settings.auto_rotate }}" data-speed="{{ section.settings.rotation_speed | times: 1000 }}">
    {%- for block in section.blocks -%}
      {%- case block.type -%}
        {%- when 'announcement' -%}
          <div class="announcement-bar__message text-center py-2 px-4 bg-accent-dark text-white text-sm" {{ block.shopify_attributes }}>
            {%- if block.settings.link != blank -%}
              <a href="{{ block.settings.link }}" class="announcement-bar__link link-inverse focus-inset animate-underline">
            {%- endif -%}
                {{ block.settings.text | escape }}
            {%- if block.settings.link != blank -%}
              </a>
            {%- endif -%}
          </div>
      {%- endcase -%}
    {%- endfor -%}
  </div>
{% endif %}

{% schema %}
{
  "name": "Announcement bar",
  "max_blocks": 12,
  "settings": [
    {
      "type": "checkbox",
      "id": "auto_rotate",
      "label": "Auto-rotate announcements",
      "default": true
    },
    {
      "type": "range",
      "id": "rotation_speed",
      "min": 3,
      "max": 10,
      "step": 1,
      "unit": "sec",
      "label": "Rotation speed",
      "default": 5
    }
  ],
  "blocks": [
    {
      "type": "announcement",
      "name": "Announcement",
      "settings": [
        {
          "type": "text",
          "id": "text",
          "label": "Text",
          "default": "Welcome to our store"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        }
      ]
    }
  ]
}
{% endschema %}