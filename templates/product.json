{
  "sections": {
    "main": {
      "type": "main-product",
      "blocks": {
        "vendor": {
          "type": "text",
          "settings": {
            "text_style": "uppercase",
            "text": "{{ product.vendor }}"
          }
        },
        "title": {
          "type": "title"
        },
        "price": {
          "type": "price"
        },
        "variant_picker": {
          "type": "variant_picker",
          "settings": {
            "picker_type": "button"
          }
        },
        "quantity_selector": {
          "type": "quantity_selector"
        },
        "buy_buttons": {
          "type": "buy_buttons",
          "settings": {
            "show_dynamic_checkout": true
          }
        },
        "description": {
          "type": "description"
        },
        "benefits": {
          "type": "custom",
          "settings": {
            "content": "{{ product.metafields.custom.benefits.value }}"
          }
        },
        "ingredients": {
          "type": "custom",
          "settings": {
            "content": "{{ product.metafields.custom.ingredients.value }}"
          }
        },
        "how_to_use": {
          "type": "custom",
          "settings": {
            "content": "{{ product.metafields.custom.how_to_use.value }}"
          }
        }
      },
      "block_order": [
        "vendor",
        "title",
        "price",
        "variant_picker",
        "quantity_selector",
        "buy_buttons",
        "description",
        "benefits",
        "ingredients",
        "how_to_use"
      ],
      "settings": {
        "enable_sticky_info": true,
        "enable_video_looping": false
      }
    },
    "related_products": {
      "type": "related-products",
      "settings": {
        "heading": "Tambi√©n te puede interesar",
        "products_to_show": 4,
        "columns_desktop": 4
      }
    }
  },
  "order": [
    "main",
    "related_products"
  ]
}